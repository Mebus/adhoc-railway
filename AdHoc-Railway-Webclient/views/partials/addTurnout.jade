div.row
    div.span10
        h3 Add Turnout
div.row
    div.span5
        form(ng-submit='addTurnout()')
            fieldset
                p
                    input(autofocus='true', type='number', size='4', placeholder='Number', ng-model='turnout.number')
                p
                    select(ng-model='turnout.type')
                        option DEFAULT_LEFT
                        option DEFAULT_RIGHT
                        option DOUBLECROSS
                        option THREEWAY
                        option CUTTER
                p
                    input(type='number',size='4', placeholder='Bus 1', ng-model='turnout.bus1')
                p
                    input(type='number',size='4', placeholder='Address 1', ng-model='turnout.address1')
                p
                    label.checkbox Address 1 switched
                        input(type='checkbox', ng-model='turnout.address1switched')
                p
                    input(type='number',size='4', placeholder='Bus 2', ng-model='turnout.bus2')
                p
                    input(type='number',size='4', placeholder='Address 2', ng-model='turnout.address2')
                p
                    label.checkbox Address 2 switched
                        input(type='checkbox', ng-model='turnout.address2switched')
                p
                    select(ng-model='turnout.defaultState')
                        option LEFT
                        option RIGHT
                        option STRAIGHT
                        option CURVED
                p
                    select(ng-model='turnout.orientation')
                        option NORTH
                        option EAST
                        option SOUTH
                        option WEST
                p
                    button.btn(type='submit') Add
    div.span5
        div.alert(ng-show='error')
            button.close(type='button', data-dismiss='alert')
            {{error}}

